@{
    ViewData["Title"] = "All Games";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model IEnumerable<GameRating.Models.Game>

<div class="d-flex flex-row-reverse bd-highlight mb-4">
<a class="btn btn-danger"  role="button"
 asp-controller="Admin" asp-action="CreateGame" asp-area=""
>Add Game</a>

</div>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Title</th>
      <th scope="col">Detail</th>
      <th scope="col">CreatedDate</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
      @foreach (var item in Model)
    {
    <tr>
      <th scope="row">
             <img
               style="width: 95px; height: 120px"
                src="data:image/png;base64,@Html.Raw(item.Banner)" />

      </th>
      <td>@item.Title</td>
      <td>@item.Detail</td>
      <td>@item.CreatedDate</td>

        <td>
              <a href="/Admin/EditGame/@item.GameId" class="btn btn-primary"> Edit  </a>
            </td>
            <td>
                <a href="/Admin/DeleteGame/@item.GameId" class="btn btn-danger"> Delete  </a>
            </td>
    </tr>
    }
  </tbody>
</table>