@model GameRating.Models.SignInViewModel

@{
 ViewData["Title"] = "Sign In";
}


<div class="row">
 <div class="col-4 offset-4">
  <h1 class="display-6 text-center pb-2">@ViewData["Title"]</h1>
 </div>
</div>

<div class="row">
 <div class="col-4 offset-4">
  <form method="post" asp-controller="User" asp-action="SignIn">
   <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

   <div class="form-group mb-3">
    <label asp-for="Username" class="form-label">Username</label>
    <input asp-for="Username" class="form-control" placeholder="Username" />
    <span asp-validation-for="Username" class="text-danger small"></span>
   </div>

   <div class="form-group mb-3">
    <label asp-for="Password" class="form-label">Password</label>
    <input asp-for="Password" type="password" class="form-control" placeholder="Password!" />
    <span asp-validation-for="Password" class="text-danger small"></span>
   </div>

   <div class="form-group d-grid mb-3">
    <button type="submit" class="btn btn-dark d-block"><i class="fa-solid fa-right-to-bracket me-2 mt-2"></i>Sign
     In</button>
   </div>
  </form>
 </div>
</div>